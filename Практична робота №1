#include <stdio.h>
#include <windows.h>
#include <conio.h>

void time();

int main()
{
    SetConsoleCP(1251);
    SetConsoleOutputCP(1251);

    time();

    return 0;
}

void time()
{
    int t1, t2, t3;
    float result = 0;
    int point = 0;

    do{
        point = 0;
        printf("\nВведіть час (год), за котрий кожна людина може з’їсти пиріг: \n1. ");
        scanf("%d", &t1);
        printf ("2. ");
        scanf("%d",&t2);
        printf("3. ");
        scanf("%d",&t3);

        if(t1 > 10000 || t2 > 10000 || t3 > 10000){
            point = 1;
            printf("\nЧас, за який людина може з’їсти пиріг не повинен перевищувати 10000\n");
        }
    } while (point == 1);

    result = 1.0 / (1.0 / t1 + 1.0 / t2 + 1.0 / t3);

    printf("\nЧас, необхідний для з'їдання пирога: %.2f", result);

    getch();
}
